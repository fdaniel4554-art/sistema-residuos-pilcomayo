# ============================================
# VARIABLES DE ENTORNO - SISTEMA DE RESIDUOS
# ============================================

# ----------------
# GENERAL
# ----------------
NODE_ENV=development
APP_NAME=Sistema Residuos Pilcomayo
APP_URL=http://localhost:3000

# ----------------
# BACKEND API
# ----------------
BACKEND_PORT=4000
API_URL=http://localhost:4000

# JWT Secret (cambiar en producción)
JWT_SECRET=tu-secreto-super-seguro-cambiar-en-produccion-12345
JWT_EXPIRES_IN=7d

# ----------------
# DATABASE (PostgreSQL)
# ----------------
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/residuos_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=residuos_db
POSTGRES_PORT=5432

# ----------------
# REDIS
# ----------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# ----------------
# MINIO (Almacenamiento de imágenes)
# ----------------
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=residuos-images
MINIO_USE_SSL=false
MINIO_CONSOLE_PORT=9001

# URL pública de MinIO (para acceso desde frontend)
MINIO_PUBLIC_URL=http://localhost:9000

# ----------------
# AI SERVICE (Python)
# ----------------
AI_SERVICE_URL=http://ai-service:8000
AI_SERVICE_PORT=8000

# Modelo de IA a usar (google_vision, tensorflow, yolo)
AI_MODEL=google_vision

# Google Vision API (opcional, si usas Google Vision)
GOOGLE_VISION_API_KEY=

# ----------------
# FRONTEND
# ----------------
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_MINIO_URL=http://localhost:9000
NEXT_PUBLIC_MAPBOX_TOKEN=
NEXT_PUBLIC_APP_NAME=Sistema Residuos Pilcomayo

# Coordenadas por defecto (Pilcomayo, Huancayo)
NEXT_PUBLIC_DEFAULT_LAT=-12.0464
NEXT_PUBLIC_DEFAULT_LNG=-75.2137
NEXT_PUBLIC_DEFAULT_ZOOM=14

# ----------------
# NGINX
# ----------------
NGINX_PORT=80

# ----------------
# CONFIGURACIÓN DE DESARROLLO
# ----------------
# Habilitar logs detallados
DEBUG=true
LOG_LEVEL=debug

# ----------------
# CONFIGURACIÓN DE PRODUCCIÓN
# ----------------
# Descomentar y configurar para producción
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=info
# APP_URL=https://residuos.pilcomayo.gob.pe
# NEXT_PUBLIC_API_URL=https://api.residuos.pilcomayo.gob.pe
